<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="128"
    android:background="@drawable/gradiente_list_normal"
    android:gravity="top"
    android:onClick="mostrarDetalle"
    android:orientation="vertical"
    android:paddingBottom="2dp" >

    <ImageView
        android:id="@+id/imagenListaEventos"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:src="@drawable/ic_action_action_settings" />

    <TextView
        android:id="@+id/textNombreSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageFlecha"
        android:layout_toRightOf="@+id/imagenListaEventos"
        android:alpha="128"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageFlecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/abc_ic_go_search_api_holo_light" />

</RelativeLayout>